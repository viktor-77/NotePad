# Django settings module for default environment
DJANGO_SETTINGS_MODULE=config.settings.dev

# Security key (use a strong, unique value in production)
SECRET_KEY=your-secret-key-here

# Allowed hosts for Django (comma-separated list of hostnames)
ALLOWED_HOSTS=localhost,127.0.0.1

# External hostname (automatically added to ALLOWED_HOSTS in production if provided)
RENDER_EXTERNAL_HOSTNAME=your-project.onrender.com

# Database credentials for PostgreSQL
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
